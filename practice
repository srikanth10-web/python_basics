#Number of hours in a month
num_of_hours_per_day = 24 
days_in_month = 31
total_hours_in_month = num_of_hours_per_day * days_in_month
print(total_hours_in_month)

#if days are 30
days_in_month = 30
total_hours_in_month = num_of_hours_per_day * days_in_month
print(total_hours_in_month)
